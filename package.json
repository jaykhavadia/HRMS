{
  "name": "hrms",
  "version": "1.0.0",
  "description": "Human Resource Management System - A comprehensive HRMS platform for managing employees, attendance tracking, and organizational workflows",
  "author": "HRMS Team",
  "private": true,
  "license": "UNLICENSED",
  "keywords": ["hrms", "hr", "human-resources", "attendance", "nestjs", "mongodb"],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/hrms.git"
  },
  "homepage": "https://github.com/your-org/hrms#readme",
  "bugs": {
    "url": "https://github.com/your-org/hrms/issues"
  },
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "setup:docker": "./setup-docker.sh",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v --remove-orphans && docker system prune -f",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "docker:init": "./docker-init.sh",
    "docker:status": "docker-compose ps",
    "docker:shell": "docker-compose exec hrms-app sh",
    "docker:mongo": "docker-compose exec mongodb mongosh -u admin -p admin123",
    "docker:mongo:express": "docker-compose --profile tools up mongo-express",
    "dev": "npm run start:dev",
    "dev:docker": "npm run docker:dev",
    "prod": "npm run docker:prod",
    "db:migrate": "echo 'No migrations needed - MongoDB handles schema updates automatically'",
    "db:seed": "echo 'Database seeding not implemented yet'",
    "db:reset": "docker-compose exec mongodb mongo -u admin -p admin123 hrms --eval 'db.dropDatabase()'",
    "db:backup": "docker-compose exec mongodb mongodump -u admin -p admin123 --db hrms --out /backup && echo 'Backup created in ./docker/volumes/mongodb/backup/'",
    "db:restore": "docker-compose exec mongodb mongorestore -u admin -p admin123 --db hrms /backup/hrms",
    "clean": "rm -rf dist node_modules/.cache coverage",
    "clean:all": "npm run clean && docker-compose down -v --remove-orphans && docker system prune -f"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.4",
    "@types/passport-jwt": "^4.0.1",
    "@types/uuid": "^10.0.0",
    "@types/xlsx": "^0.0.35",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "googleapis": "^167.0.0",
    "mongoose": "^8.20.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.1",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "testTimeout": 10000,
    "setupFilesAfterEnv": ["<rootDir>/../test/setup.ts"],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
