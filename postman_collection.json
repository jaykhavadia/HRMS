{
	"info": {
		"_postman_id": "hrms-multi-tenant-api",
		"name": "HRMS Multi-Tenant API",
		"description": "Complete API collection for HRMS Multi-Tenant Backend",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Organization",
			"item": [
				{
					"name": "Register Organization",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('organization_id', response._id);",
									"    pm.environment.set('client_id', response.clientId);",
									"    pm.environment.set('client_name', response.clientName);",
									"    pm.environment.set('company_domain', response.companyDomain);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"companyName\": \"Acme Corporation\",\n  \"companyLocation\": \"123 Business St, New York, NY 10001\",\n  \"companyEmail\": \"admin@acme-corp.com\",\n  \"displayName\": \"Acme Corp\",\n  \"companyDomain\": \"acme-corp\",\n  \"adminFirstName\": \"John\",\n  \"adminLastName\": \"Doe\",\n  \"adminEmail\": \"john.doe@acme-corp.com\",\n  \"officeLocation\": {\n    \"latitude\": 40.7128,\n    \"longitude\": -74.0060,\n    \"address\": \"123 Business St, New York, NY 10001\",\n    \"radius\": 100\n  }\n}"
						},
						"url": {
							"raw": "{{base_url}}/organization/register",
							"host": ["{{base_url}}"],
							"path": ["organization", "register"]
						},
						"description": "Register a new organization. Creates master DB record, tenant database, and admin user."
					},
					"response": []
				}
			]
		},
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('access_token', response.accessToken);",
									"    pm.environment.set('user_id', response.user.id);",
									"    pm.environment.set('user_role', response.user.role);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Tenant-Domain",
								"value": "{{company_domain}}",
								"description": "Tenant identifier"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"john.doe@acme-corp.com\",\n  \"password\": \"SecurePassword123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						},
						"description": "Login with email and password. Returns JWT token."
					},
					"response": []
				},
				{
					"name": "Setup Password",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Tenant-Domain",
								"value": "{{company_domain}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"token\": \"password-setup-token-from-email\",\n  \"password\": \"NewSecurePassword123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/setup-password",
							"host": ["{{base_url}}"],
							"path": ["auth", "setup-password"]
						},
						"description": "Set password using token received via email."
					},
					"response": []
				}
			]
		},
		{
			"name": "Users",
			"item": [
				{
					"name": "Create User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "X-Tenant-Domain",
								"value": "{{company_domain}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Smith\",\n  \"email\": \"jane.smith@acme-corp.com\",\n  \"mobileNumber\": \"+1234567890\",\n  \"role\": \"employee\",\n  \"status\": \"active\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/user",
							"host": ["{{base_url}}"],
							"path": ["user"]
						},
						"description": "Create a new user. Admin only. Password setup email will be sent."
					},
					"response": []
				},
				{
					"name": "Bulk Upload Users",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "X-Tenant-Domain",
								"value": "{{company_domain}}"
							}
						],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": [],
									"description": "Excel file with columns: First Name, Last Name, Email, Mobile Number, Role, Status"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/user/bulk-upload",
							"host": ["{{base_url}}"],
							"path": ["user", "bulk-upload"]
						},
						"description": "Bulk upload users from Excel file. Admin only."
					},
					"response": []
				},
				{
					"name": "Get All Users",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "X-Tenant-Domain",
								"value": "{{company_domain}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/user?role=employee",
							"host": ["{{base_url}}"],
							"path": ["user"],
							"query": [
								{
									"key": "role",
									"value": "employee",
									"description": "Filter by role (admin/employee). Optional."
								}
							]
						},
						"description": "Get all users. Admin sees all, employee sees only own profile."
					},
					"response": []
				},
				{
					"name": "Get User By ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "X-Tenant-Domain",
								"value": "{{company_domain}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/user/:id",
							"host": ["{{base_url}}"],
							"path": ["user", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "{{user_id}}",
									"description": "User ID"
								}
							]
						},
						"description": "Get user by ID. Employees can only view their own profile."
					},
					"response": []
				}
			]
		},
